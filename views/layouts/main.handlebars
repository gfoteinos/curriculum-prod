<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <meta http-equiv="X-UA-Compatible" content="ie=edge" />

  <!-- Bootstrap  -->
  <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css"
    integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">

  <!-- Fontawesome -->
  <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.7.2/css/all.css"
    integrity="sha384-fnmOCqbTlWIlj8LyTjo7mOUStjsKC4pOpQbqyi7RrhN7udi9RwhKkMHpvLbHG9Sr" crossorigin="anonymous" />

  <!-- Devicon Icon Set -->
  <link rel="stylesheet"
    href="https://cdn.rawgit.com/konpa/devicon/df6431e323547add1b4cf45992913f15286456d3/devicon.min.css" />

  <!-- Google Fonts -->
  <link href="https://fonts.googleapis.com/css?family=Montserrat:400,500,700&display=swap" rel="stylesheet" />

  <!-- Custom CSS -->
  <link rel="stylesheet" href="/css/style.css" />

  <!-- Munipulate The DOM -->
  <script type="text/javascript" src="/js/events.js"></script>

  <title>University</title>

  {{!-- <style>
    html {
      scroll-behavior: smooth;
    }
  </style> --}}
</head>

<body data-spy="scroll" data-target="#main-navigation">
  <!-- Navbar -->
  {{> _site-nav}}

  <!-- Body -->
  {{{body}}}

  <!-- Footer -->
  {{> _footer}}


  <!-- ======== SCRIPTS ======== -->
  <!-- jQuery -->
  <script src="https://code.jquery.com/jquery-3.4.1.min.js"
    integrity="sha256-CSXorXvZcTkaix6Yvo6HppcZGetbYMGWSFlBw8HfCJo=" crossorigin="anonymous"></script>

  <!-- Bootstrap -->
  <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js"
    integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo"
    crossorigin="anonymous"></script>

  <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.min.js"
    integrity="sha384-wfSDF2E50Y2D1uUdj0O3uMBJnjuUD4Ih7YwaYd1iqfktj0Uod8GCExl3Og8ifwB6"
    crossorigin="anonymous"></script>


  <!-- CKEditor - text editor -->
  <script src="https://cdn.ckeditor.com/4.13.1/standard/ckeditor.js"></script>

  <!-- Custom JavaScript -->
  <script src="app.js"></script>
  <script>
    // Get the current year for the copyright
    $("#year").text(new Date().getFullYear());

    // ======== BOOTSTRAP COMPONENTS ========
    // -------- TOOLTIPS & POPOVERS --------
    // Init tooltips
    $('[data-toggle="tooltip"]').tooltip();

    // ---- Init popovers ----
    $('#UnableCreateModuleBtn').popover({
      container: 'body',
      trigger: 'focus'
    })
    $('#UnableAddTaughtModuleBtn').popover({
      container: 'body',
      trigger: 'focus'
    })
    $('#UnableAddCourseworksBtn').popover({
      container: 'body',
      trigger: 'focus'
    })
    $('#UnableAddExamsBtn').popover({
      container: 'body',
      trigger: 'focus'
    })

    // ---- Tabs Nav ----
    $('#dashboardTabs a').on('click', function (e) {
      e.preventDefault()
      $(this).tab('show')
    })

    // ======== SCROLLSPY ========
    // Init Scrollspy
    $("body").scrollspy({ target: "#main-navigation" });

    // Smooth Scrolling
    $("#main-navigation a").on("click", function (event) {
      if (this.hash !== "") {
        event.preventDefault();

        const hash = this.hash;

        $("html, body").animate(
          {
            scrollTop: $(hash).offset().top
          },
          800,
          function () {
            window.location.hash = hash;
          }
        );
      }
    });

    // ======== ALERT TIMEOUT ========
    setTimeout(function () {
      document.querySelector('.alert').remove();
    }, 5000);

    // ======== CKEditor ========
    // -------- Profile Form - Faculty Member "Bio" Textarea --------
    const bio = CKEDITOR.replace('bio', {
      plugins: 'wysiwygarea, toolbar, basicstyles, link',
      extraPlugins: 'notification'
    });

    bio.on('required', function (evt) {
      bio.showNotification('This field is required.', 'warning');
      evt.cancel();
    });

    // -------- "Edit Course" Form - "Description" Textarea --------
    const editCourseDescription = CKEDITOR.replace('editCourseDescription', {
      plugins: 'wysiwygarea, toolbar, basicstyles, link',
      extraPlugins: 'notification'
    });

    editCourseDescription.on('required', function (evt) {
      editCourseDescription.showNotification('This field is required.', 'warning');
      evt.cancel();
    });


    // -------- "Create Course" Form - "Description" Textarea --------
    const courseDescription = CKEDITOR.replace('createCourseDescription', {
      plugins: 'wysiwygarea, toolbar, basicstyles, link',
      extraPlugins: 'notification'
    });

    courseDescription.on('required', function (evt) {
      courseDescription.showNotification('This field is required.', 'warning');
      evt.cancel();
    });

    // -------- "Edit Module" Form - "Description" Textarea --------
    const editModuleDescription = CKEDITOR.replace('editModuleDescription', {
      plugins: 'wysiwygarea, toolbar, basicstyles, link',
      extraPlugins: 'notification'
    });

    editModuleDescription.on('required', function (evt) {
      editModuleDescription.showNotification('This field is required.', 'warning');
      evt.cancel();
    });

    // -------- "Create Module" Form - "Description" Textarea --------
    const moduleDescription = CKEDITOR.replace('createModuleDescription', {
      plugins: 'wysiwygarea, toolbar, basicstyles, link',
      extraPlugins: 'notification'
    });

    moduleDescription.on('required', function (evt) {
      moduleDescription.showNotification('This field is required.', 'warning');
      evt.cancel();
    });

  </script>

</body>

</html>