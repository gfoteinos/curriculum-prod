  <script>
    // Get the current year for the copyright
    $("#year").text(new Date().getFullYear());

    // ======== BOOTSTRAP COMPONENTS ========
    // -------- TOOLTIPS & POPOVERS --------
    // Init tooltips
    $('[data-toggle="tooltip"]').tooltip();

    // ---- Init popovers ----
    $('#UnableCreateModuleBtn').popover({
      container: 'body',
      trigger: 'focus'
    })
    $('#UnableAddTaughtModuleBtn').popover({
      container: 'body',
      trigger: 'focus'
    })
    $('#UnableAddCourseworksBtn').popover({
      container: 'body',
      trigger: 'focus'
    })
    $('#UnableAddExamsBtn').popover({
      container: 'body',
      trigger: 'focus'
    })

    // ---- Tabs Nav ----
    $('#dashboardTabs a').on('click', function (e) {
      e.preventDefault()
      $(this).tab('show')
    })

    // ======== SCROLLSPY ========
    // Init Scrollspy
    $("body").scrollspy({ target: "#main-navigation" });

    // Smooth Scrolling
    $("#main-navigation a").on("click", function (event) {
      if (this.hash !== "") {
        event.preventDefault();

        const hash = this.hash;

        $("html, body").animate(
          {
            scrollTop: $(hash).offset().top
          },
          800,
          function () {
            window.location.hash = hash;
          }
        );
      }
    });


    // ======== ALERT TIMEOUT ========
    //setTimeout(function () {
    //  document.querySelector('.alert').remove();
    //}, 5000);

  </script>

