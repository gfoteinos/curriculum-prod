<!-- MODULE SELECTION -->
<div class="card">
  <div class="card-header bg-white">
    <h3 class="mb-0">Modules Selection</h3>
    <small>Add a module in your module list</small>
  </div>
  <div class="card-body">
    <form action="">
      <div class="table-responsive">
        <table id="modulesSelectionTable" class="table">
          <caption class="h5 py-0">Modules</caption>
          <thead>
            <tr>
              <th scope="col">#</th>
              <th scope="col" class="sort-title">
                Title
                <i class="fas fa-angle-down"></i>
              </th>
              <th scope="col">
                Tutors
                <i class="fas fa-angle-down"></i></th>
              <th scope="col">
                <div class="custom-control custom-checkbox checkThemAll">
                  <input type="checkbox" class="custom-control-input" id="checkAll">
                  <label class="custom-control-label" for="checkAll"></label>
                </div>
              </th>
            </tr>
          </thead>
          <tbody>
            {{#each taughtModules}}
            <tr>
              <th scope="row">{{aa}}</th>
              <td class="title">
                {{moduleName}}
              </td>
              <td>{{facultyName}}</td>
              <td>
                <div class="custom-control custom-checkbox">
                  <input type="checkbox" id="moduleID-{{id}}" class="custom-control-input" name="modulesID"
                    value="{{id}}">
                  <label class="custom-control-label" for="moduleID-{{id}}"></label>
                </div>
              </td>
            </tr>
            {{/each}}
          </tbody>
        </table>
      </div>
      <div class="d-flex justify-content-end mt-3">
        <button type="submit" class="btn btn-success mr-2">
          Add Modules
        </button>
      </div>
    </form>
  </div>
</div>