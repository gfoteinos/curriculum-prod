<div class="card">
  <div class="card-header bg-white">
    <h3 class="mb-0">Account Info</h3>
    <small class="">
      Edit your account settings and change your password here
    </small>
  </div>
  {{> _formMsgsAccount}}
  <div class="card-body">
    <!-- ======== Change Email ======== -->
    <form action="/dashboards/student/email/{{student.id}}?_method=PUT" method="post">
      <input type="hidden" name="_method" value="PUT">
      <!-- Email -->
      <div class="form-group mb-4">
        <label for="email">Email</label>
        <div class="input-group input-group--white">
          <div class="input-group-prepend">
            <span id="addonEmail" class="input-group-text">
              <i class="fas fa-envelope"></i>
            </span>
          </div>
          <input type="email" name="email" id="email" class="form-control form-control-lg"
            placeholder="{{student.email}}" maxlength="64" minlength="7" required="" aria-label="Email"
            aria-describedby="addonEmail" />
          <div class="input-group-append">
            <button type="submit" class="btn btn-outline-success button--border-grey-light" aria-label="Save Email">
              <i class="fas fa-save"></i>
            </button>
          </div>
        </div>
      </div>
    </form>
    <!-- ======== Change Password ======== -->
    <form action="/dashboards/student/password/{{student.id}}?_method=PUT" method="post">
      <input type="hidden" name="_method" value="PUT">
      <hr>
      <h4 class="mb-0">Password</h4>
      <small class="form-text text-muted mb-3">
        Your password must be 8-20 characters long, contain letters and numbers, and must not contain
        spaces, special characters, or emoji.
      </small>
      <!-- Current Password -->
      <div class="form-group">
        <label for="currentPassword">Current Password</label>
        <div class="input-group input-group--white">
          <div class="input-group-prepend">
            <span id="addonCurrentPassword" class="input-group-text">
              <i class="fas fa-lock"></i>
            </span>
          </div>
          <input type="password" name="password" id="currentPassword" class="form-control form-control-lg"
            placeholder="" maxlength="64" minlength="4" aria-label="Current Password"
            aria-describedby="addonCurrentPassword" required />
        </div>
      </div>
      <!-- New Password -->
      <div class="form-group">
        <label for="newPassword">Enter New Password</label>
        <div class="input-group input-group--white">
          <div class="input-group-prepend">
            <span id="addonNewPassword" class="input-group-text">
              <i class="fas fa-lock"></i>
            </span>
          </div>
          <input type="password" name="password1" id="newPassword" class="form-control form-control-lg" placeholder=""
            maxlength="64" minlength="4" aria-label="Enter New Password" aria-describedby="addonNewPassword" required />
        </div>
      </div>
      <!-- Confirm New Password -->
      <div class="form-group">
        <label for="confirmPassword">Re-type New Password</label>
        <div class="input-group input-group--white">
          <div class="input-group-prepend">
            <span id="addonConfirmPassword" class="input-group-text">
              <i class="fas fa-lock"></i>
            </span>
          </div>
          <input type="password" name="password2" id="confirmPassword" class="form-control form-control-lg" placeholder=""
            maxlength="64" minlength="4" aria-label="Re-type New Password"
            aria-describedby="addonConfirmPassword" required/>
        </div>
      </div>
      <!-- Save button -->
      <div class="d-flex justify-content-end">
        <button type="submit" class="btn btn-success">
          Change Password
        </button>
      </div>
    </form>
  </div>
</div>