<div class="card">
  <div class="card-header bg-white">
    {{!-- Tab List  --}}
    <ul class="nav nav-tabs nav-tabs--text-left card-header-tabs nav-fill" id="dashboardTabs" role="tablist">
      <li class="nav-item">
        <a class="nav-link active" href="#taughtModules" role="tab" aria-controls="taughtModules" aria-selected="true">
          <h4 class="card-title mb-0">Modules</h4>
          <small>List</small>
        </a>
      </li>
      <li class="nav-item">
        <a class="nav-link" href="#courseworksCalendar" role="tab" aria-controls="courseworksCalendar"
          aria-selected="false">
          <h4 class="card-text mb-0">Courseworks</h4>
          <small>Calendar</small>
        </a>
      </li>
      <li class="nav-item">
        <a class="nav-link" href="#examsCalendar" role="tab" aria-controls="examsCalendar" aria-selected="false">
          <h4 class="card-text mb-0">Exams</h4>
          <small>Calendar</small>
        </a>
      </li>
      <li class="nav-item">
        <a class="nav-link" href="#modulesGrades" role="tab" aria-controls="modulesGrades" aria-selected="false">
          <h4 class="card-text mb-0">Modules</h4>
          <small>Grades</small>
        </a>
      </li>
    </ul>
  </div>
  {{> _formMsgsDashboard }}
  <div class="card-body">
    <div class="tab-content mt-3">
      <!-- Modules List -->
      <div class="tab-pane active" id="taughtModules" role="tabpanel">
        <form action="/dashboards/facultyMember/taughtModules/delete/{{faculty.id}}?_method=PUT`" method="post">
          <input type="hidden" name="_method" value="PUT">

          <div class="table-responsive">
            <table id="taughtModulesTable" class="table">
              <caption class="h5 py-0">Taught Modules</caption>
              <thead>
                <tr>
                  <th scope="col">#</th>
                  <th scope="col" class="sort-title">
                    Title
                    <i class="fas fa-angle-down"></i>
                  </th>
                  <th scope="col" class="sort-course">
                    Course
                    <i class="fas fa-angle-down"></i>
                  </th>
                  <th scope="col" class="sort-level">
                    Level
                    <i class="fas fa-angle-down"></i>
                  </th>
                  <th scope="col">
                    <div class="custom-control custom-checkbox checkThemAll">
                      <input type="checkbox" class="custom-control-input" id="tmtfCheckAll">
                      <label class="custom-control-label" for="tmtfCheckAll"></label>
                    </div>
                  </th>
                </tr>
              </thead>
              <tbody>
                {{#each taughtModulesList}}
                <tr>
                  <th scope="row">{{aa}}</th>
                  <td class="title">
                    {{name}}
                  </td>
                  <td class="course">
                    {{courseName}}
                  </td>
                  <td class="level">
                    {{courseDegree}}
                  </td>
                  <td>
                    <div class="custom-control custom-checkbox">
                      <input type="checkbox" id="tmtf-{{id}}" class="custom-control-input" name="modulesID"
                        value="{{id}}">
                      <label class="custom-control-label" for="tmtf-{{id}}"></label>
                    </div>
                  </td>
                </tr>
                {{/each}}
              </tbody>
            </table>
          </div>
          <div class="d-flex justify-content-end mt-3">
            <!-- Add Module Button -->
            <button type="button" id="triggerModalAddTaughtModuleBtn" class="btn btn-success mr-2" data-toggle="modal"
              data-target="#addTaughtModuleModal">
              Add Module
            </button>
            <!-- Trigger Delete Module Modal -->
            <button type="button" id="triggerModalDeleteTaughtModulesBtn" class="btn btn-danger" data-trigger="true"
              data-toggle="modal" data-target="#deleteTaughtModulesModal" disabled>
              Delete
            </button>
            <!-- Delete Module Button -->
            <button type="submit" id="deleteTaughtModules" class="btn btn-danger d-none">
              Delete
            </button>
          </div>
        </form>
      </div>
      <!-- Courseworks Calendar -->
      <div class="tab-pane" id="courseworksCalendar" role="tabpanel">
        <div class="table-responsive">
          <table id="courseworksTbl" class="table">
            <caption class="h5 py-0">Courseworks</caption>
            <thead>
              <tr>
                <th scope="col">#</th>
                <th scope="col">Modules</th>
                <th scope="col">Due Date</th>
                <th scope="col">Edit</th>
                <th scope="col">
                  <div class="custom-control custom-checkbox checkThemAll">
                    <input type="checkbox" class="custom-control-input" id="cwCheckAll">
                    <label class="custom-control-label" for="cwCheckAll"></label>
                  </div>
                </th>
              </tr>
            </thead>
            <tbody></tbody>
          </table>
        </div>
        <div class="d-flex justify-content-end mt-3">
          <button id="addCourseworksCollapseBtn" type="button" class="btn btn-primary mr-2" data-toggle="collapse"
            data-target="#addCourseworksCollapse">
            Add Coursework
          </button>
          <button id="deleteCourseworks" type="button" class="btn btn-danger">
            Delete
          </button>
        </div>
        <!-- Add Coursework (Collapse) -->
        <div class="col-12 mt-3">
          <div class="collapse" id="addCourseworksCollapse">
            <div class="card card-body">
              <div class="table-responsive">
                <table id="addCourseworksTbl" class="table">
                  <caption class="h5 py-0">Taught Modules</caption>
                  <thead>
                    <tr>
                      <th scope="col">#</th>
                      <th scope="col">Modules</th>
                      <th scope="col">Due Date</th>
                      <th scope="col">
                        <div class="custom-control custom-checkbox checkThemAll">
                          <input type="checkbox" class="custom-control-input" id="acwCheckAll">
                          <label class="custom-control-label" for="acwCheckAll"></label>
                        </div>
                      </th>
                    </tr>
                  </thead>
                  <tbody></tbody>
                </table>
              </div>
              <div class="d-flex justify-content-end mt-3">
                <button id="addCourseworksBtn" type="button" class="btn btn-primary mr-2">
                  <i class="fas fa-plus"></i>
                </button>
              </div>
            </div>
          </div>
        </div>
      </div>
      <!-- Exams Calendar -->
      <div class="tab-pane" id="examsCalendar" role="tabpanel" aria-labelledby="examsCalendar-tab">
        <div class="table-responsive">
          <table id="examsTbl" class="table">
            <caption class="h5 py-0">Exams</caption>
            <thead>
              <tr>
                <th scope="col">#</th>
                <th scope="col">Module</th>
                <th scope="col">Date</th>
                <th scope="col">Time</th>
                <th scope="col">Class</th>
                <th scope="col"></th>
              </tr>
            </thead>
            <tbody></tbody>
          </table>
        </div>
      </div>
      <!-- Modules Grades                    -->
      <div class="tab-pane" id="modulesGrades" role="tabpanel" aria-labelledby="modulesGrades-tab">
        <div class="table-responsive">
          <table class="table">
            <caption class="h5 py-0">Grades</caption>
            <thead>
              <tr>
                <th scope="col">#</th>
                <th scope="col">Module</th>
                <th scope="col">Edit</th>
              </tr>
            </thead>
            <tbody>
              <tr>
                <th scope="row">1</th>
                <td>Statistics</td>
                <td>
                  <button type="button" class="btn btn-sm btn-primary" data-toggle="modal"
                    data-target="#editModuleMarksModal">
                    <i class="fas fa-pencil-alt"></i>
                  </button>
                </td>
              </tr>
              <tr>
                <th scope="row">2</th>
                <td>Computation</td>
                <td>
                  <button type="button" class="btn btn-sm btn-primary" data-toggle="modal"
                    data-target="#editModuleMarksModal">
                    <i class="fas fa-pencil-alt"></i>
                  </button>
                </td>
              </tr>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</div>